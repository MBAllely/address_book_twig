<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="styles.css" media="all">
        <title>Address Book</title>
    </head>
    <body>
        <div class="container">
            <h1>Address Book</h1>
            <h3>Add a contact: </h3>
            <form action="/create_contact" method="post">
                <div class="form-group"> <!--first name-->
                    <label for="first_name">First name: </label>
                    <input id="first_name" name="first_name" class="form-control" type="text">
                </div>
                <div class="form-group"> <!--middle name-->
                    <label for="middle_name">Middle name: </label>
                    <input id="middle_name" name="middle_name" class="form-control" type="text">
                </div>
                <div class="form-group"> <!--last name-->
                    <label for="last_name">Last name: </label>
                    <input id="last_name" name="last_name" class="form-control" type="text">
                </div>
                <div class="form-group"> <!--phone number-->
                    <label for="phone">Phone number: </label>
                    <input id="phone" name="phone" class="form-control" type="number">
                </div>
                <div class="form-group"> <!--email-->
                    <label for="email">Email Address: </label>
                    <input id="email" name="email" class="form-control" type="text">
                </div>
                <div class="form-group"> <!--street-->
                    <label for="street">Street: </label>
                    <input id="street" name="street" class="form-control" type="text">
                </div>
                <div class="form-group"> <!--city-->
                    <label for="city">City: </label>
                    <input id="city" name="city" class="form-control" type="text">
                </div>
                <div class="form-group"> <!--state-->
                    <label for="state">State: </label>
                    <input id="state" name="state" class="form-control" type="text">
                </div>
                <div class="form-group"> <!--zip-->
                    <label for="zip">Zip: </label>
                    <input id="zip" name="zip" class="form-control" type="text">
                </div>
                <div class="form-group"> <!--zip-->
                    <label for="image">Photo URL: </label>
                    <input id="image" name="image" class="form-control" type="text">
                </div>

                <button type="submit" name="button" class="btn btn-primary">Create!</button>
            </form>
            <form action="/delete_contacts" method="post">
                <button type="submit" class="btn btn-danger"  name="button">Delete Contacts</button>
            </form>

            <br>
            <h2>Your Contacts: </h2>

            {% for contact in contacts %}
            <div class="row">
                <div class="col-xs-4">
                    <h5>Name: {{ contact.getFirstName }} {{ contact.getMiddleName }} {{ contact.getLastName }}</h5>
                    <h6>Phone number: {{ contact.getPhone }}</h6>
                    <h6>Email address: {{ contact.getEmail }}</h6>
                    <h6>Physical Address: {{ contact.getStreet }}, {{ contact.getCity }}, {{ contact.getState }},  {{ contact.getZip }}</h6>
                </div>
                <div class="col-xs-5">
                    <img src="{{ contact.getImage }}" alt="{{ contact.getFirstName }} {{ contact.getFirstName }}" />
                </div>
            </div>
            {% endfor %}
        </div>
    </body>
</html>
